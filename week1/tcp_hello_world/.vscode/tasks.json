{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "cl",
            "args": [
                "server.cpp",
                "/Fe:server.exe",
                "/EHsc",
                "/W4",
                "/MT"
            ],
            "group": "build"
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "cl",
            "args": [
                "client.cpp",
                "/Fe:client.exe",
                "/EHsc",
                "/W4",
                "/MT"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}